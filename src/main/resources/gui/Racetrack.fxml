<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="borderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="800.0" minWidth="800.0" prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.RacetrackController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Game">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#newGame" text="New" />
                        <MenuItem mnemonicParsing="false" onAction="#showMenu" text="Return To Menu" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#loadLevel" text="Load" />
                        <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" text="Quit" onAction="#quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#btnEditorClicked" text="Editor Mode" />
                        <Menu mnemonicParsing="false" text="Animation Speed">
                            <items>
                                <CheckMenuItem fx:id="animationSlow" mnemonicParsing="false" text="Slow" onAction="#checkedMenuClicked"/>
                                <CheckMenuItem fx:id="animationMedium" mnemonicParsing="false"  text="Medium"  onAction="#checkedMenuClicked"/>
                                <CheckMenuItem fx:id="animationFast" mnemonicParsing="false"  text="Fast"  onAction="#checkedMenuClicked"/>
                                <CheckMenuItem fx:id="animationVeryFast" mnemonicParsing="false"  text="Very Fast"  onAction="#checkedMenuClicked"/>
                            </items>
                        </Menu>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <Label fx:id="textError" maxWidth="1.7976931348623157E308" text="Area for Error " BorderPane.alignment="CENTER_LEFT" />
    </bottom>
    <center>
        <Pane fx:id="centerPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="100.0" minWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane fx:id="gridGame" alignment="CENTER" gridLinesVisible="true" minHeight="100.0" minWidth="100.0" onMouseClicked="#gridGameClicked">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin></Pane>
    </center>
</BorderPane>
